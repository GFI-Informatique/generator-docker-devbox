version: "2"
networks:
  nginx-proxy:
    external: true
services:
{{#if webContainer}}
  web:
  {{#if_eq webImage 'php'}}
    environment:
      - XDEBUG_CONFIG=idekey=remote-debug remote_host=${HOST_IP}
      - VIRTUAL_HOST={{projectName}}.test
    networks:
      - default
      - nginx-proxy
    ports:
      - "{{portPrefix}}80:80"
  {{/if_eq ~}}
{{/if ~}}
{{#if dbContainer}}
  db:
  {{#if_eq dbImage 'postgres'}}
    ports:
      - "{{portPrefix}}32:5432"
  {{/if_eq ~}}
  {{#if_eq dbImage 'mysql'}}
    ports:
      - "{{portPrefix}}06:3306"
  {{/if_eq ~}}
{{/if ~}}
{{#if nodeContainer}}
  node:
    environment:
      VIRTUAL_HOST: node.{{projectName}}.test
    networks:
      - default
      - nginx-proxy
{{/if ~}}
{{#if mapserverContainer}}
  mapserver:
    restart: unless-stopped
    environment:
      - VIRTUAL_HOST=mapserver.{{projectName}}.test
    networks:
      - default
      - nginx-proxy
    ports:
      - "{{portPrefix}}85:80"
{{/if ~}}
{{#if mailcatcherContainer}}
  mailcatcher:
    build:
      context: .docker
      dockerfile: mailcatcher/Dockerfile
    environment:
      - VIRTUAL_HOST=mailcatcher.{{projectName}}.test
    networks:
      - default
      - nginx-proxy
{{/if ~}}
{{#if mavenContainer}}
  maven:
    build:
      context: .docker
      dockerfile: maven/Dockerfile
    volumes:
      - "${COMPOSE_PROJECT_DIR}:/usr/src/app"
      - "maven:/var/www/.m2"
{{/if ~}}
{{#if mavenContainer}}
volumes:
  maven: ~
{{/if ~}}
