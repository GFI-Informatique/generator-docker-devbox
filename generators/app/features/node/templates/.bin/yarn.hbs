#!/usr/bin/env sh
. "$DOCKER_DEVBOX_DIR/.bash_enter.d/03-functions"

if [ "$1" -eq "serve" ] || { [ "$1" -eq "run" ] && [ "$2" == "serve" ]; }; then
  PORTS=" -p ${DOCKER_DEVBOX_PORT_PREFIX}88:80"
  echo "Port mapping:$PORTS"
else
  PORTS=""
fi

run$PORTS --workdir="$(_docker_devbox_map_workdir "/app")" {{service.name}} yarn "$@"
